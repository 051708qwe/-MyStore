<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_hight"
        >
        <ImageView
            android:visibility="invisible"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_ttitle_back"
            android:id="@+id/tiele_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tilte_tv"
            android:visibility="invisible"
            android:text="标题栏"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/tilte_right_rl"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/tiele_left_iv"
                android:layout_width="70dp"
                android:layout_height="100dp" />
            <TextView

                android:id="@+id/tilte_right_tv"
                android:text="右边"
                android:visibility="invisible"
                android:textColor="@android:color/black"
                android:textSize="16sp"

                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>

    <!--主要内容-->
    <LinearLayout
        android:id="@+id/base_content_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>