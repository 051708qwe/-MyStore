<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="12dp"
        android:background="@drawable/ic_launcher"
        android:id="@+id/profit_listview_icon"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/profit_info_game_name"
                android:layout_weight="1"
                android:text="游戏名字"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
            <RatingBar
                android:id="@+id/profit_ratingbar"
                style="?android:ratingBarStyleSmall"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
            <TextView
                android:textSize="12dp"
                android:id="@+id/profit_info_download_time"
                android:layout_weight="1"
                android:text="下载次数"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                <TextView
                    android:textSize="12dp"
                    android:id="@+id/profit_info_game_size"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="游戏大小"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            
        </LinearLayout>
        <LinearLayout

            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_profit_download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/profit_Ub_prize"
                android:textColor="@color/colorPrimaryDark"
                android:text="奖励100U币"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>